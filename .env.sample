# NarakAAI Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# LLM API Keys (at least one required)
# ===========================================

# OpenAI - For GPT-5.1, GPT-5 mini, GPT-5 nano, GPT-4o, o1
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic - For Claude 3.5 Sonnet, Claude 4
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Google - For Gemini 3 Pro, Gemini 2.5, Veo 3.1, Nano Banana
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=AIza...

# ===========================================
# Ollama Configuration (for local models)
# ===========================================
# Use http://host.docker.internal:11434 when running via Docker
OLLAMA_BASE_URL=http://127.0.0.1:11434

# ===========================================
# Default LLM Settings
# ===========================================
DEFAULT_LLM_PROVIDER=google
DEFAULT_LLM_MODEL=gemini-flash-latest

# ===========================================
# Tor Configuration
# ===========================================
TOR_HOST=127.0.0.1
TOR_PORT=9050
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=

# ===========================================
# API Configuration
# ===========================================
API_HOST=127.0.0.1
API_PORT=8080
API_DEBUG=false

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=text

# ===========================================
# Cache
# ===========================================
CACHE_BACKEND=sqlite
CACHE_DEFAULT_TTL=3600

# ===========================================
# Storage
# ===========================================
STORAGE_BACKEND=sqlite
STORAGE_SQLITE_PATH=narakaai_data.db
